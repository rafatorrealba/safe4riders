<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.safe4riders" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="BarcodeScanner">
        <param name="android-package" value="com.phonegap.plugins.barcodescanner.BarcodeScanner" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <name>Safe4riders</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <splash src="res/screen/android/screen.jpg" />
    <allow-intent href="market:*" />
    <icon density="ldpi" src="res/icon/android/logo.png" />
    <icon density="mdpi" src="res/icon/android/logo.png" />
    <icon density="hdpi" src="res/icon/android/logo.png" />
    <icon density="xhdpi" src="res/icon/android/logo.png" />
    <icon density="xxhdpi" src="res/icon/android/logo.png" />
    <icon density="xxxhdpi" src="res/icon/android/logo.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashScreenDelay" value="4000" />
    <preference name="SplashScreen" value="splash" />
</widget>
